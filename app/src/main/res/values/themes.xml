<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FunTrivia" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_background</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="CardDetail">

        <item name="android:textSize">
            18sp
        </item>

    </style>

    <style name="CardTitle">

        <item name="android:textSize">
            20sp
        </item>

    </style>

    <style name="subHeading">

        <item name="android:textSize">
            18sp
        </item>

        <item name="android:letterSpacing">
            0.04
        </item>

        <item name="android:textColor">
            @color/text_color
        </item>

    </style>

    <style name="subHeading2">

        <item name="android:textSize">
            18sp
        </item>

        <item name="android:textColor">
            @color/text_color
        </item>

    </style>

    <style name="inputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/purple_background</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="android:textColorHint">@color/text_color</item>
    </style>

</resources>